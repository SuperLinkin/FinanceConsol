# ============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# ============================================================================

# ----------------------------------------------------------------------------
# SUPABASE CONFIGURATION (Required)
# ----------------------------------------------------------------------------
# Get these from your Supabase project dashboard: https://app.supabase.com
# Project Settings > API

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ----------------------------------------------------------------------------
# JWT AUTHENTICATION (Required)
# ----------------------------------------------------------------------------
# Generate a strong random secret for production:
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_SECRET=your_strong_jwt_secret_here_min_64_characters

# ----------------------------------------------------------------------------
# OPENAI API (Required for AI features)
# ----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
# Note: Monitor usage to avoid unexpected costs

OPENAI_API_KEY=your_openai_api_key_here

# ----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# ----------------------------------------------------------------------------

# Environment (development, staging, production)
NODE_ENV=production

# Application URL (for redirects and CORS)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Session Duration (in seconds, default: 7 days)
SESSION_DURATION=604800

# ----------------------------------------------------------------------------
# PYTHON SERVICE CONFIGURATION (For AI-powered Cash Flow)
# ----------------------------------------------------------------------------

# Python service URL (default: http://localhost:8000)
PYTHON_SERVICE_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# OPTIONAL: EMAIL SERVICE (For user invitations and notifications)
# ----------------------------------------------------------------------------
# Uncomment and configure if using email features

# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM=noreply@yourdomain.com

# ----------------------------------------------------------------------------
# OPTIONAL: ERROR TRACKING (Recommended for production)
# ----------------------------------------------------------------------------
# Uncomment if using Sentry for error monitoring

# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ----------------------------------------------------------------------------
# OPTIONAL: ANALYTICS
# ----------------------------------------------------------------------------

# NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# ----------------------------------------------------------------------------

# Enable HTTPS-only cookies (should be true in production)
SECURE_COOKIES=true

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=60

# AI API rate limiting (requests per hour per user)
AI_RATE_LIMIT_PER_HOUR=100

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------

# Enable demo credentials on login page (false for production)
NEXT_PUBLIC_ENABLE_DEMO=false

# Enable debug mode (false for production)
NEXT_PUBLIC_DEBUG_MODE=false

# Enable test API endpoints (false for production)
ENABLE_TEST_ENDPOINTS=false

# ----------------------------------------------------------------------------
# DATABASE SETTINGS
# ----------------------------------------------------------------------------

# Maximum database connection pool size
DB_POOL_MAX=20

# Connection timeout (milliseconds)
DB_TIMEOUT=30000

# ----------------------------------------------------------------------------
# FILE UPLOAD SETTINGS
# ----------------------------------------------------------------------------

# Maximum file size for uploads (in bytes, default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for upload (comma-separated)
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# ----------------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------------

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable console logging (false for production)
ENABLE_CONSOLE_LOGS=false
